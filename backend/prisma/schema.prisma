generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         String @id @default(uuid())
  email      String @unique
  name       String
  password   String
  bio        String @default("")
  profilepic String @default("")
  posts      post[]
}

model post {
  id        String  @id @default(uuid())
  content   String
  published Boolean @default(false)
  title     String
  authorid  String
  picture   String  @default("")
  author    user    @relation(fields: [authorid], references: [id])
}
